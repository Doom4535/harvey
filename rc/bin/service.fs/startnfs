#!/bin/rc
echo killing old nfs server
Kill portmapper|rc
Kill nfsserver|rc
rm -f /srv/nfsserver.chat /srv/portmapper.chat
echo starting new nfs server
if(test -e /srv/nfs)
	aux/nfsserver -f /srv/nfs -c /sys/lib/nfs/clients >>[2] /sys/log/nfsserver
if not {
	switch(`{cat /dev/sysname}){
	case olive
		aux/nfsserver -a tcp!edith -c /sys/lib/nfs/clients >>[2] /sys/log/nfsserver
	case anna
		aux/nfsserver -a il!emelie -a il!choline -c /sys/lib/nfs/clients >>[2] /sys/log/nfsserver
	case delay
		rm -f /srv/howard
		srvfs howard /usr/howard/timesys/rfs
		chmod 666 /srv/howard
		aux/nfsserver -d9cc -f /srv/howard -c /sys/lib/nfs/clients >>[2] /sys/log/nfsserver
	}
}
aux/portmapper >>[2] /sys/log/portmapper
aux/portmapper -t >>[2] /sys/log/portmapper
